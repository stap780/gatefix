<div class="row">
  <div class="col-3">
    <h2>Заказы</h2>
      <small>Всего - <%= Order.count %></small>
    <%# link_to '<span class="oi oi-trash"></span>'.html_safe, delete_selected_citilinks_path, class: 'btn btn-secondary btn-sm', id: 'deleteAll', remote: true, data: { delete_url: delete_selected_citilinks_path } %>
  </div>
  <%= search_form_for @search, {class: 'form-inline col-9 pl-0 pr-0'} do |f| %>
    <div class="input-group input-group-sm">
      <%= f.search_field :order_id_eq , placeholder: 'order_id', class: "form-control", style: "max-width: 180px;" %>
      <%= button_tag(type: 'submit', :class => "btn btn-info") do %>
        <span class="oi oi-magnifying-glass"></span>
      <% end %>
      <%= link_to '<span class="oi oi-reload"></span>'.html_safe, orders_path, class: 'btn btn-outline-dark ' %>
    </div>
  <% end %>
</div>

<div class="table-responsive">
  <table class="table table-hover table-condensed">
  <thead>
    <tr class="bg-success">
      <th>Date</th>
      <th>Transaction</th>
      <th>Amount</th>
      <th>Description</th>
      <th>Order</th>
      <th>Client data</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <%= render order %>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<div class="apple_pagination">
<%= will_paginate @orders %>
</div>
